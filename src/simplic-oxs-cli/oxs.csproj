<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>oxs</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyTitle>OXS CLI</AssemblyTitle>
    <Product>OXS CLI Tool</Product>
    <Description>Command line interface for OXS operations</Description>
    <Copyright>Copyright � 2025</Copyright>
    <Version>1.0.6</Version>
    <AssemblyVersion>1.0.6</AssemblyVersion>
    <FileVersion>1.0.6</FileVersion>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == ''">win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Commands\Auth\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ini-parser" Version="3.4.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Simplic.OxS.Flow.Meta" Version="1.0.525.1215" />
    <PackageReference Include="Simplic.OxS.Flow.Runtime" Version="1.1.2325.1215" />
    <PackageReference Include="Spectre.Console.Cli" Version="0.53.1" />
  </ItemGroup>

</Project>